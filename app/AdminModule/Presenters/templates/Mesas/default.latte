{block content}
<div class="container">
    <div class="row justify-content-md-center">
        <div class="col col-lg-6">
            <h2>AÃ±adir mesa</h2>
            {control masMesasForm}
        </div>
    </div>
    <div class="row">
        <div class="col col-lg-12">
            <h2>Listado de mesas</h2>

            <table class="table">
                {if $mesas}
                <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Opciones</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
                </thead>
                <tbody>
                {foreach $mesas as $mesa}
                    <tr>
                        <td>
                            {$mesa->id}
                        </td>
                        <td>
                            {$mesa->nombre}
                        </td>
                        <td></td>
                        <td>
                            {if $mesa->estado}
                                Ocupada
                            {else}
                                Vacia
                            {/if}
                        </td>
                        <td align="center">
                            <a n:href="Mesas:editar $mesa->id"
                                    class="btn btn-xs btn-primary">Editar</a>
                            <a n:href="Mesas:borrar $mesa->id" class="btn btn-xs btn-danger del">Borrar</a>
                        </td>
                    </tr>
                {/foreach}
                {else}
                <tr>
                    <td> No hay ninguna mesa existente</td>
                </tr>
                {/if}
                </tbody>
            </table>
        </div>
    </div>

    {/block}
