{block content}
    <div class="container">
        <div class="row">
            <h1 n:block="tittle">Bienvenido al sistema oidococina</h1>
        </div>
        <div class="row">
            <div class="col col-lg-6">
                <h2>Estado actual de las mesas</h2>
            </div>
        </div>
        <div class="row">
            <div class="col col-lg-12">
                <table class="table">
                    <thead class="thead-dark">
                    <tr>
                        <th>
                            Nombre
                        </th>
                        <th>
                            Estado
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    {foreach $mesas as $mesa}
                        <tr>
                            <td>
                                {$mesa->nombre}
                            </td>
                            <td>
                                {switch $mesa->estado}
                                    {case 0}
                                    Libre
                                    {case 1}
                                    Ocupada
                                    {case 2}
                                    Esperando servicio del pedido
                                    {case 3}
                                    Servida
                                    {default}
                                    Not working
                                {/switch}
                            </td>
                        </tr>
                    {/foreach}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{/block}
