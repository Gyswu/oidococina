{block content}
    <div class="container">
        <div class="row">
            <div class="col col-lg-6">
                <h2>Comanda {$pedido->id} de la <a n:href="Mesas:ver $pedido->mesa->id">Mesa
                        {$pedido->mesa->nombre}</a></h2>
            </div>
            <div class="col col-lg-6">
                {if $pedido->estado == 0}
                    Mesa Libre
                    <a n:href="Pedidos:reservar $pedido->id, $pedido->mesa->id" class="btn
                    btn-primary">Ocupar</a>
                {/if}
                {if $pedido->estado == 1}
                    Mesa ocuapada
                    <a href="" class="btn btn-warning">Pedido Realizado</a>
                {/if}
                {if $pedido->estado == 2}
                    <a href="" class="btn btn-success">Pedido Servido</a>
                {/if}
                {if $pedido->estado == 3}
                    <a href="" class="btn btn-danger">Cuenta</a>
                {/if}
            </div>
        </div>
        <div class="row">
            <table class="table">
                <thead class="thead-dark">
                <tr>
                    <th>
                        Nombre
                    </th>
                    <th>
                        Precio
                    </th>
                    <th>
                        Categoria
                    </th>
                    <th>
                        Acciones
                    </th>
                </tr>
                </thead>
                <tbody>
                {foreach $pedido->platos as $plato }
                    <tr>
                        <td>
                            {$plato->nombre}
                        </td>
                        <td>
                            {$plato->precio}€
                        </td>
                        <td>
                            {$plato->categoria->nombre}

                        </td>
                        <td>
                            <a n:href="Pedidos:ver $pedido->id" class="btn btn-success">Pedir de
                                nuevo</a>
                            <a n:href="Pedidos:cancelarPlato $plato->id, $pedido->id,
$pedido->mesa->id"
                                    class="btn
                            btn-danger">Cancelar</a>
                            {*<a n:href="Mesas:pedirPlato $plato->id, $mesa->id" class="btn btn-xs*}
                            {*btn-primary">Pedir de nuevo</a>*}
                        </td>
                    </tr>
                {/foreach}
                </tbody>
            </table>
        </div>

        <div class="row">
            <table class="table">
                <thead class="thead-dark">
                <tr>
                    <th>
                        Nombre
                    </th>
                    <th>
                        Precio
                    </th>
                    <th>
                        Categoria
                    </th>
                    <th>
                        Acciones
                    </th>
                </tr>
                </thead>
                <tbody>
                {foreach $platos as $plato }
                    <tr>
                        <td>
                            {$plato->nombre}
                        </td>
                        <td>
                            {$plato->precio}€
                        </td>
                        <td>
                            {$plato->categoria->nombre}
                        </td>
                        <td>
                            <a n:href="Pedidos:comanda $pedido->id, 'mesaID' => $mesa->id,
'platoID' => $plato->id" class="btn
                            btn-success">Añadir</a>

                            {*<a n:href="Mesas:pedirPlato $plato->id, $mesa->id" class="btn btn-xs*}
                            {*btn-primary">Pedir de nuevo</a>*}
                        </td>
                    </tr>
                {/foreach}
                </tbody>
            </table>
        </div>
    </div>
{/block}